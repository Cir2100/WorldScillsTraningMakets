<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/my_button_inset</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20dp</item>
    </style>


    <style name="TextInput.SingIn" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconMode">clear_text</item>
        <item name="boxStrokeColor">#fff</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textColorHint">@color/blue</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="TextInput.Profile" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">@color/blue</item>
        <item name="endIconDrawable">@drawable/ic_create</item>
        <item name="boxBackgroundColor">@color/shining_blue</item>
        <item name="android:background">@color/shining_blue</item>
        <item name="android:textColorHint">@color/blue</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="mTextViewHint">
        <item name="android:textColor">@color/blue</item>
        <item name="android:hint">@color/blue</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

</resources>